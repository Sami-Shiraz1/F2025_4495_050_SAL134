<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F5F5F7"
        app:headerLayout="@layout/nav_header_layout"
        app:menu="@menu/nav_menu_layout"/>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- User Greeting -->
                <TextView
                    android:id="@+id/tvWelcomeUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, User!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Health Records RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHealthRecords"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingTop="8dp"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="24dp"/>

                <!-- Health Tips Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/HealthTips"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/healthtips"
                            android:background="@drawable/ovalblue"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Health Tips"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1BA1F3"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Heart Guidance Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/HeartTip"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/medicine"
                            android:background="@drawable/ovalred"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heart Guidance"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#E53935"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Workout Recommender Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/workoutRecommender"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/workout"
                            android:background="@drawable/ovalorange"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Workout Recommender"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Calorie Calculator Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/calorieCalc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/calorie"
                            android:background="@drawable/ovalblue"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calorie Calculator"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1BA1F3"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- BMI Calculator Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/BMI"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/bmi"
                            android:background="@drawable/ovalgreen"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BMI Calculator"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <!-- Copyright at Bottom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Sami Ali"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
