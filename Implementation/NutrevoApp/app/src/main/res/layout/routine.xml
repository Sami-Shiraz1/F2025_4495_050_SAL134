<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".RoutineActivity">

 <!-- Date Input -->
 <EditText
     android:id="@+id/etDate"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="Enter Date"
     android:padding="12dp"
     android:background="@android:drawable/editbox_background"
     android:textSize="16sp"
     android:layout_margin="10dp" />

 <!-- Workout Name -->
 <EditText
     android:id="@+id/etWorkoutName"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/etDate"
     android:layout_marginHorizontal="10dp"
     android:layout_marginTop="8dp"
     android:hint="Workout Name"
     android:padding="12dp"
     android:background="@android:drawable/editbox_background"
     android:textSize="16sp" />

 <!-- Description -->
 <EditText
     android:id="@+id/etWorkoutDetails"
     android:layout_width="match_parent"
     android:layout_height="180dp"
     android:layout_below="@id/etWorkoutName"
     android:layout_marginHorizontal="10dp"
     android:layout_marginTop="8dp"
     android:hint="Workout Details (e.g., exercises, duration, notes)"
     android:gravity="top|start"
     android:padding="12dp"
     android:background="@android:drawable/editbox_background"
     android:textSize="15sp" />

 <!-- Schedule ID -->
 <EditText
     android:id="@+id/etScheduleId"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/etWorkoutDetails"
     android:layout_marginHorizontal="10dp"
     android:layout_marginTop="8dp"
     android:hint="Enter Schedule Number to Update/Delete"
     android:padding="12dp"
     android:background="@android:drawable/editbox_background"
     android:textSize="15sp" />

 <!-- Save and Show Buttons Row -->
 <LinearLayout
     android:id="@+id/layoutTopButtons"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/etScheduleId"
     android:layout_marginTop="30dp"
     android:gravity="center"
     android:orientation="horizontal">

  <Button
      android:id="@+id/btnSave"
      android:layout_width="0dp"
      android:layout_height="55dp"
      android:layout_weight="1"
      android:layout_margin="8dp"
      android:text="Save"
      android:background="#8BC34A"
      android:textColor="#FFFFFF"
      android:textStyle="bold" />

  <Button
      android:id="@+id/btnShow"
      android:layout_width="0dp"
      android:layout_height="55dp"
      android:layout_weight="1"
      android:layout_margin="8dp"
      android:text="Show"
      android:background="#4CAF50"
      android:textColor="#FFFFFF"
      android:textStyle="bold" />
 </LinearLayout>

 <!-- Update and Delete Buttons Row -->
 <LinearLayout
     android:id="@+id/layoutBottomButtons"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/layoutTopButtons"
     android:layout_marginTop="10dp"
     android:gravity="center"
     android:orientation="horizontal">

  <Button
      android:id="@+id/btnUpdate"
      android:layout_width="0dp"
      android:layout_height="55dp"
      android:layout_weight="1"
      android:layout_margin="8dp"
      android:text="Update"
      android:background="#03A9F4"
      android:textColor="#FFFFFF"
      android:textStyle="bold" />

  <Button
      android:id="@+id/btnDelete"
      android:layout_width="0dp"
      android:layout_height="55dp"
      android:layout_weight="1"
      android:layout_margin="8dp"
      android:text="Delete"
      android:background="#F44336"
      android:textColor="#FFFFFF"
      android:textStyle="bold" />
 </LinearLayout>

</RelativeLayout>
